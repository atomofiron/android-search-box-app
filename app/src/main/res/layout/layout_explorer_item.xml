<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/preference_explorer_item"
        layout="@layout/item_explorer_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:flexWrap="wrap"
        app:flexDirection="row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preference_explorer_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_middle"
            android:text="-rwxrwxrwx"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_middle"
            android:text="atomofiron"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_middle"
            android:text="everybody"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_middle"
            android:text="19-01-2038"
            />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/preference_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_middle"
            android:text="03:14"
            />
    </com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>